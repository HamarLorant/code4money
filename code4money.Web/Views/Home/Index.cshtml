<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Code4Money</title>

        @Styles.Render("~/Content/css")

        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/bundles/masonry")
        @Scripts.Render("~/bundles/angularModules")
        @Scripts.Render("~/bundles/code4money")
    </head>
    <body id="mainApp" 
          ng-app="code4money" 
          ng-controller="HomeController"
          ng-init="homeWrap.Init()">

        <div class="main-content">

            <nav class="navbar navbar-inverse navbar-fixed-top">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="#">
                    <span class="c4mlogo">
                        <font class="rm">&lt;</font><font class="dm">$</font><font class="rm">&gt;</font>
                    </span>
                </a>
                <div class="collapse navbar-collapse mr20" id="navbarTogglerDemo02">
                    <ul class="nav navbar-nav navbar-right">
                        <li ng-show="homeWrap.store.user"><span class="padd15 block lightgray"><font class="grayish">Logged in as</font> {{homeWrap.store.user.email}}</span></li>
                        <li ng-if="homeWrap.pageBits.login"><a href="#/Login">Login</a></li>
                        @*<li><a href="#/Register">Register</a></li>*@
                        <li ng-if="homeWrap.pageBits.manage"><a href="#/Manage">Manage</a></li>
                        <li ng-if="homeWrap.pageBits.browse"><a href="#/Browse">Browse</a></li>
                        @*<li><a href="#/ImageView/6">ImageView</a></li>*@
                        <li ng-if="homeWrap.pageBits.logout" 
                            ng-click="homeWrap.LogoutUser()"><a href="#">Logout</a></li>
                    </ul>
                </div>
            </nav>

            <div class="container body-content">
                <div ng-view></div>
            </div>

            <footer class="footer">
                <p>&copy; @DateTime.Now.Year - Óbudai Egyetem, NIK / Code4Money csapat</p>
            </footer>
        </div>
    </body>
</html>